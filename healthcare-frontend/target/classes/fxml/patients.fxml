<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>

<VBox xmlns="http://javafx.com/javafx/23"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="ma.ensa.healthcare.ui.controllers.PatientsController"
      spacing="20">

    <!-- BARRE D'ACTIONS -->
    <HBox spacing="15" alignment="CENTER_LEFT" styleClass="card">
        <TextField fx:id="searchField" promptText="Rechercher un patient (nom, CIN, téléphone...)" 
                   prefWidth="300" styleClass="modern-text-field"
                   style="-fx-background-color: #F5F5F5; -fx-background-radius: 8; -fx-padding: 10;">
            <HBox.margin>
                <Insets right="10"/>
            </HBox.margin>
        </TextField>
        
        <Button text="" onAction="#handleSearch" styleClass="action-button" prefHeight="40">
            <graphic>
                <FontAwesomeIconView glyphName="SEARCH" size="14" fill="WHITE"/>
            </graphic>
        </Button>
        
        <Region HBox.hgrow="ALWAYS"/>
        
        <Button text="Nouveau Patient" onAction="#handleAddPatient" styleClass="action-button-success" prefHeight="40">
            <graphic>
                <FontAwesomeIconView glyphName="USER_PLUS" size="14" fill="WHITE"/>
            </graphic>
        </Button>
        
        <Button text="Exporter" styleClass="action-button" prefHeight="40">
            <graphic>
                <FontAwesomeIconView glyphName="DOWNLOAD" size="14" fill="WHITE"/>
            </graphic>
        </Button>
    </HBox>

    <!-- TABLE DES PATIENTS -->
    <VBox styleClass="card" VBox.vgrow="ALWAYS">
        <TableView fx:id="tablePatients" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn text="ID" prefWidth="60" fx:id="colId"/>
                <TableColumn text="CIN" prefWidth="100" fx:id="colCin"/>
                <TableColumn text="Nom" prefWidth="150" fx:id="colNom"/>
                <TableColumn text="Prénom" prefWidth="150" fx:id="colPrenom"/>
                <TableColumn text="Sexe" prefWidth="70" fx:id="colSexe"/>
                <TableColumn text="Date Naissance" prefWidth="130" fx:id="colDateNaissance"/>
                <TableColumn text="Téléphone" prefWidth="120" fx:id="colTelephone"/>
                <TableColumn text="Email" prefWidth="200" fx:id="colEmail"/>
                <TableColumn text="Actions" prefWidth="150" fx:id="colActions"/>
            </columns>
        </TableView>
        
        <!-- PAGINATION -->
        <HBox alignment="CENTER" spacing="10" style="-fx-padding: 15;">
            <Label text="Total: " style="-fx-font-weight: bold;"/>
            <Label fx:id="lblTotal" text="0" style="-fx-font-weight: bold; -fx-text-fill: #2196F3;"/>
            <Label text="patients"/>
        </HBox>
    </VBox>

</VBox>
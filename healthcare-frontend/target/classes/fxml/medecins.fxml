<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>

<VBox xmlns="http://javafx.com/javafx/23"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="ma.ensa.healthcare.ui.controllers.MedecinsController"
      spacing="20">

    <!-- BARRE D'ACTIONS -->
    <HBox spacing="15" alignment="CENTER_LEFT" styleClass="card">
        <TextField fx:id="searchField" promptText="Rechercher un médecin (nom, spécialité, n° ordre...)" 
                   prefWidth="400" styleClass="modern-text-field"
                   style="-fx-background-color: #F5F5F5; -fx-background-radius: 8; -fx-padding: 10;">
            <HBox.margin>
                <Insets right="10"/>
            </HBox.margin>
        </TextField>
        
        <Button text="Rechercher" onAction="#handleSearch" styleClass="action-button" prefHeight="40">
            <graphic>
                <FontAwesomeIconView glyphName="SEARCH" size="14" fill="WHITE"/>
            </graphic>
        </Button>
        
        <ComboBox fx:id="cmbFilterSpecialite" promptText="Toutes les spécialités" prefWidth="200"/>
        
        <ComboBox fx:id="cmbFilterDepartement" promptText="Tous les départements" prefWidth="200"/>
        
        <Button text="Filtrer" onAction="#handleFilter" styleClass="action-button" prefHeight="40">
            <graphic>
                <FontAwesomeIconView glyphName="FILTER" size="14" fill="WHITE"/>
            </graphic>
        </Button>
        
        <Region HBox.hgrow="ALWAYS"/>
        
        <Button text="Nouveau Médecin" onAction="#handleAddMedecin" 
                styleClass="action-button-success" prefHeight="40">
            <graphic>
                <FontAwesomeIconView glyphName="USER_MD" size="14" fill="WHITE"/>
            </graphic>
        </Button>
    </HBox>

    <!-- STATISTIQUES -->
    <HBox spacing="15">
        <VBox styleClass="card" spacing="5" prefWidth="280">
            <Label text="Total Médecins" style="-fx-font-size: 12px; -fx-text-fill: #757575;"/>
            <Label fx:id="lblTotalMedecins" text="0" 
                   style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #2196F3;"/>
        </VBox>
        
        <VBox styleClass="card" spacing="5" prefWidth="280">
            <Label text="Spécialités" style="-fx-font-size: 12px; -fx-text-fill: #757575;"/>
            <Label fx:id="lblNbSpecialites" text="0" 
                   style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #4CAF50;"/>
        </VBox>
        
        <VBox styleClass="card" spacing="5" prefWidth="280">
            <Label text="Départements" style="-fx-font-size: 12px; -fx-text-fill: #757575;"/>
            <Label fx:id="lblNbDepartements" text="0" 
                   style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #9C27B0;"/>
        </VBox>
        
        <VBox styleClass="card" spacing="5" prefWidth="280">
            <Label text="Consultations/Jour" style="-fx-font-size: 12px; -fx-text-fill: #757575;"/>
            <Label fx:id="lblConsultationsMoyennes" text="0" 
                   style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #FF9800;"/>
        </VBox>
    </HBox>

    <!-- TABLE DES MÉDECINS -->
    <VBox styleClass="card" VBox.vgrow="ALWAYS">
        <TableView fx:id="tableMedecins" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn text="ID" prefWidth="60" fx:id="colId"/>
                <TableColumn text="N° Ordre" prefWidth="120" fx:id="colNumeroOrdre"/>
                <TableColumn text="Nom" prefWidth="150" fx:id="colNom"/>
                <TableColumn text="Prénom" prefWidth="150" fx:id="colPrenom"/>
                <TableColumn text="Spécialité" prefWidth="180" fx:id="colSpecialite"/>
                <TableColumn text="Département" prefWidth="180" fx:id="colDepartement"/>
                <TableColumn text="Téléphone" prefWidth="130" fx:id="colTelephone"/>
                <TableColumn text="Email" prefWidth="220" fx:id="colEmail"/>
                <TableColumn text="Date Embauche" prefWidth="130" fx:id="colDateEmbauche"/>
                <TableColumn text="Actions" prefWidth="150" fx:id="colActions"/>
            </columns>
        </TableView>
        
        <!-- PAGINATION -->
        <HBox alignment="CENTER" spacing="10" style="-fx-padding: 15;">
            <Label text="Total: " style="-fx-font-weight: bold;"/>
            <Label fx:id="lblTotal" text="0" style="-fx-font-weight: bold; -fx-text-fill: #2196F3;"/>
            <Label text="médecins"/>
        </HBox>
    </VBox>

</VBox>
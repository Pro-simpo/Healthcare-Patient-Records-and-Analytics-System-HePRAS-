<?xml version="1.0" encoding="UTF-8"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.ehcache.org/v3"
        xsi:schemaLocation="http://www.ehcache.org/v3 
        http://www.ehcache.org/schema/ehcache-core-3.0.xsd">

    <cache alias="patients">
        <key-type>java.lang.Long</key-type>
        <value-type>ma.ensa.healthcare.model.Patient</value-type>
        <expiry>
            <ttl unit="hours">1</ttl>
        </expiry>
        <resources>
            <heap unit="entries">1000</heap>
        </resources>
    </cache>

    <cache alias="medecins">
        <key-type>java.lang.Long</key-type>
        <value-type>ma.ensa.healthcare.model.Medecin</value-type>
        <expiry>
            <ttl unit="hours">2</ttl>
        </expiry>
        <resources>
            <heap unit="entries">500</heap>
        </resources>
    </cache>

    <cache alias="rendezvous-today">
        <key-type>java.lang.String</key-type>
        <value-type>java.util.List</value-type>
        <expiry>
            <ttl unit="minutes">15</ttl>
        </expiry>
        <resources>
            <heap unit="entries">100</heap>
        </resources>
    </cache>

    <cache alias="medicaments">
        <key-type>java.lang.Long</key-type>
        <value-type>ma.ensa.healthcare.model.Medicament</value-type>
        <expiry>
            <ttl unit="hours">4</ttl>
        </expiry>
        <resources>
            <heap unit="entries">2000</heap>
        </resources>
    </cache>

    <cache alias="departements">
        <key-type>java.lang.Long</key-type>
        <value-type>ma.ensa.healthcare.model.Departement</value-type>
        <expiry>
            <ttl unit="hours">6</ttl>
        </expiry>
        <resources>
            <heap unit="entries">50</heap>
        </resources>
    </cache>

    <cache alias="statistics">
        <key-type>java.lang.String</key-type>
        <value-type>ma.ensa.healthcare.dto.StatisticsDTO</value-type>
        <expiry>
            <ttl unit="minutes">30</ttl>
        </expiry>
        <resources>
            <heap unit="entries">200</heap>
        </resources>
    </cache>

    <cache alias="search-results">
        <key-type>java.lang.String</key-type>
        <value-type>java.util.List</value-type>
        <expiry>
            <ttl unit="minutes">5</ttl>
        </expiry>
        <resources>
            <heap unit="entries">500</heap>
        </resources>
    </cache>

    <cache-template name="default">
        <expiry>
            <ttl unit="minutes">10</ttl>
        </expiry>
        <resources>
            <heap unit="entries">100</heap>
        </resources>
    </cache-template>

</config>